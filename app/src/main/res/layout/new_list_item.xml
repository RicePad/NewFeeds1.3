<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/paddingLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/primaryText"
                android:textSize="19sp"
                tools:text="Long placeholder location that should wrap to more than 2 lines of text"
                android:fontFamily="serif"/>
            <TextView
                style="@style/textViewSection"
                android:id="@+id/newsfeed_date"
                android:textStyle="bold"
                tools:text="19/19/19"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="textEnd"
                android:layout_gravity="end"/>
            <TextView
                style="@style/textViewSection"
                android:id="@+id/newsfeed_section_text_view"
                android:textStyle="bold"
                tools:text="newsfeed section"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="textEnd"
                android:layout_gravity="end"/>
            <View style="@style/Divider"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>